<div id="pager">
  {% if (page.count > 1) %}
    {% if (page.number) %}
      <a id="prev" href="/{{ page.number }}">Prev</a>
    {% endif %}
    {% if (page.number < page.count -1) %}
      {% if (page.mumber) %}
        &nbsp;&nbsp;
      {% endif %}
      <a id="next" href="/{{ page.number + 2 }}">Next</a>
    {% endif %}
  {% endif %}
</div>